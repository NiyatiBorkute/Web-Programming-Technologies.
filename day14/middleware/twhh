const express = require('express');
const app = express();

// Middleware to set data in request object
app.use((req, res, next) => {
  req.customData = {
    message: 'Hello from middleware!',
    timestamp: new Date()
  };
  next(); // Pass control to the next middleware or route
});

// Route handler that accesses the data
app.get('/', (req, res) => {
  res.send(`
    <h1>Middleware Data</h1>
    <p>Message: ${req.customData.message}</p>
    <p>Timestamp: ${req.customData.timestamp}</p>
  `);
});

// Start the server
app.listen(3000, () => {
  console.log('Server running on http://localhost:3000');
});
